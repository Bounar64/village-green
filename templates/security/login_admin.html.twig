{% extends 'layouts/base.html.twig' %}

{% block title 'Village green' %}

{% block body %}
    <header id="background">
    {% include('layouts/_flash_message.html.twig') %}         
        <div class="container-fluid container-admin-log">
        {# connexion admin #}
        <div class=" d-flex justify-content-center">          
            <form method="post">
                <h1 class="title text-center">Connexion Administrateur</h1>
                <div class="row d-flex justify-content-center">
                    <div class="col-10 mt-3">
                        {# email #}
                        <div class="text-start mb-3">
                            <label for="email">
                                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-person" viewBox="0 0 16 16">
                                    <path d="M8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6zm2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0zm4 8c0 1-1 1-1 1H3s-1 0-1-1 1-4 6-4 6 3 6 4zm-1-.004c-.001-.246-.154-.986-.832-1.664C11.516 10.68 10.289 10 8 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664h10z"/>
                                </svg>
                                E-mail
                            </label>
                            <input type="email" name="_email" id="email" value="{{ app.session.get(constant('App\\Controller\\AdminSecurityController::LAST_EMAIL')) }}" class="form-control" autocomplete="email" required autofocus>
                        </div>
                        {# mot de passe #}
                        <div class="text-start mb-5">
                            <label for="password">
                                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-lock" viewBox="0 0 16 16">
                                    <path d="M8 1a2 2 0 0 1 2 2v4H6V3a2 2 0 0 1 2-2zm3 6V3a3 3 0 0 0-6 0v4a2 2 0 0 0-2 2v5a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V9a2 2 0 0 0-2-2zM5 8h6a1 1 0 0 1 1 1v5a1 1 0 0 1-1 1H5a1 1 0 0 1-1-1V9a1 1 0 0 1 1-1z"/>
                                </svg>
                                Mot de passe
                            </label>
                            <input type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required>

                            <input type="hidden" name="_csrf_token"
                                value="{{ csrf_token('authenticate') }}"
                            >
                        </div>
                        <div class="col text-center mb-5">
                            <button type="submit" name="valider" class="btn btn-primary w-100">Se connecter</button>
                        </div>
                        <div class="col text-center">
                           <a href="{{ path('app_home') }}" class="text-decoration-none">
                                <p class="retour">Retour au site</p>
                            </a> 
                        </div>
                    </div>
                </div> 
            </form>              
        </div>  
    </header>
{% endblock %}
