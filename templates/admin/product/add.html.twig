{% extends 'layouts/base.html.twig' %}

{% block title 'Village green' %}

{% block body %}
    <header id="background">
        <div class="container-fluid container-admin-dashboard">
            <div class="row">
                {# -----gauche menu----- #}
                {% include('admin/layouts/menu_admin.html.twig') %}
                {# ------fermeture gauche menu----- #}
         
                {# -----droite corps----- #}
                <div class="col body mt-3" id="body">
                    {# navbar #}
                    {% include('admin/layouts/navbar_admin.html.twig') %}
                    {# fermeture navbar #}

                    {# titre du champs + boutton modifier #}
                    <div class="row mt-5">
                        <div class="col-10 d-flex">
                            <div class="col-10">
                                <h2 class="mb-3">Ajouter un nouveau produit</h2>
                            </div>
                        </div>
                    </div>

                    <hr>

                    {# bloc champ ajout de produit #}
                    {{ form_start(form) }}
                    <div class="row mt-5">
                        {# bloc gauche haut #}
                        <div class="col-6">
                            <label for="label">Label:</label>
                            {{ form_row(form.label )}}
                        </div>

                        {# bloc droite  haut #}
                        <div class="col-6">
                            gauche
                        </div>
                    </div> 
                    
                     {# bloc milieu #}
                    <div class="row">
                        <div class="col-12 text-center">
                        milieu
                        </div>    
                    </div>

                    <div class="row">
                        {# bloc gauche bas #}
                        <div class="col-6">
                            droite
                        </div>

                        {# bloc droite bas #}
                        <div class="col-6">
                            gauche
                        </div>
                    </div>
                    {{ form_end(form) }} 
                    {# fermeture bloc champ ajout de produit #}              
            </div>         
        </div>
    </header>
{% endblock %}
