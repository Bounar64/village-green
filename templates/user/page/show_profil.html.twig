{# card mes infos personelles #}
<div class="row d-flex justify-content-center mt-3">
    <div class="col-11 card">
        <div class="card-body">
            <div class="row">
                <div class="col">
                    <h5 class="card-title m-0">Mes données personnelles :</h5>
                </div>
            {# icone brush pour la modification #}
            <div class="col text-end">
                <a href="#" id="ButtonBrush" data-tooltip title="modifier mes données personelles">
                <svg data-tooltip title="modifier mes données personelles" xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor" class="bi bi-brush-fill" viewBox="0 0 16 16">
                    <path d="M15.825.12a.5.5 0 0 1 .132.584c-1.53 3.43-4.743 8.17-7.095 10.64a6.067 6.067 0 0 1-2.373 1.534c-.018.227-.06.538-.16.868-.201.659-.667 1.479-1.708 1.74a8.118 8.118 0 0 1-3.078.132 3.659 3.659 0 0 1-.562-.135 1.382 1.382 0 0 1-.466-.247.714.714 0 0 1-.204-.288.622.622 0 0 1 .004-.443c.095-.245.316-.38.461-.452.394-.197.625-.453.867-.826.095-.144.184-.297.287-.472l.117-.198c.151-.255.326-.54.546-.848.528-.739 1.201-.925 1.746-.896.126.007.243.025.348.048.062-.172.142-.38.238-.608.261-.619.658-1.419 1.187-2.069 2.176-2.67 6.18-6.206 9.117-8.104a.5.5 0 0 1 .596.04z"/>
                </svg>
                </a> 
            </div>
            </div>

            <hr>
            
            <div class="row d-flex justify-content-between">
                <div class="col-5">
                    <div class="info-user mb-2"><span class="title-info-user">Nom: </span>{{ app.user.lastName }}</div>
                    <div class="info-user mb-2"><span class="title-info-user">Prénom: </span>{{ app.user.firstName }}</div>
                    <div class="info-user"><span class="title-info-user">E-mail: </span>{{ app.user.email }}</div>
                </div>
                <div class="col-6">
                    <div class="info-user mb-2"><span class="title-info-user">Adresse: </span>{{ app.user.address }}</div>
                    {% if app.user.additionalAddress %}
                    <div class="info-user mb-2"><span class="title-info-user">Complément d'adresse: </span>{{ app.user.additionalAddress }}</div>
                    {% else %}
                        <div class="info-user mb-2"><span class="title-info-user text-muted">Complément d'adresse: </span></div>
                    {% endif %}
                    <div class="info-user mb-2"><span class="title-info-user">Ville: </span>{{ app.user.city }}</div>
                    <div class="info-user mb-2"><span class="title-info-user">Code postal: </span>{{ app.user.zipCode }}</div>
                    <div class="info-user"><span class="title-info-user">Pays: </span>{{ app.user.country }}</div>                                                    
                </div>
                <div class="row d-flex justify-content-between">
                    <div class="col">
                        <div class="info-user mb-2"><span class="title-info-user">Numéro de portable: </span>{{ app.user.phone }}</div>
                        {% if app.user.phoneFixe %}
                        <div class="info-user"><span class="title-info-user">Numéro de téléphone fixe: </span>{{ app.user.phoneFixe }}</div>
                        {% else %}
                            <div class="info-user"><span class="title-info-user text-muted">Numéro de téléphone fixe: </span></div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div> 
</div>